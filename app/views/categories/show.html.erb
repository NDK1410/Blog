<div id="colorlib-main">
	<div class="colorlib-blog">
		<div class="container-wrap">
			<div class="row">
				<div class="col-md-9">
					<% cache @current_category do %>
					<div class="content-wrap">
						<% @current_category.posts.each do |post| %>
						<article class="blog-entry-travel animate-box">
							<div class="blog-img" style="background-image: url('<%= post.image.url %>');"></div>
							<div class="desc">
								<p class="meta">
									<span class="cat"><a><%= @current_category.name %></a></span>
									<span class="date"><%= post.created_at.strftime(t".time") %></span>
								</p>
								<h2><%= link_to post.title, category_post_path(@current_category, post) %></h2>
								<p><%= post.description %></p>
								<p><a href="single.html" class="btn btn-primary with-arrow">Read More <i class="icon-arrow-right22"></i></a></p>
							</div>
						</article>
						<% end %>
					</div>
					<% end %>
				</div>
				<%= render "right_bar", cached: true %>
			</div>
			<%= render "kaminari", cached: true %>
		</div>
	</div>
</div>
